                <Label Text="Codigo de Evento" Grid.Row="1" Grid.Column="0" FontAttributes="Bold" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="DarkGreen" FontSize="Large"/>
                <Entry x:Name="CodigoEvento" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" FontSize="Large" Placeholder="Codigo Evento"/>
